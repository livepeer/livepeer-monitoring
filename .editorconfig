# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[Makefile]
indent_style = tab

[*.{yaml,yml,sh}]
indent_size = 2

[*.go]
indent_style = tab

[Dockerfile]
indent_style = tab
indent_size = 8
